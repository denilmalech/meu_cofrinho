<body>

    <div class="app-container">
        <h1>üê∑ Reserva do Casal</h1>

        <div class="cofrinho-display">
            <p>Total Acumulado</p>
            <h2 id="total-display">R$ 0,00</h2>
        </div>

        <div class="input-area">
            <select id="pessoa-input">
                <option value="Davi">Davi</option>
                <option value="Denilma">Denilma</option>
            </select>
            <input type="number" id="valor-input" placeholder="R$ 0,00" step="0.01" min="0">
            <button id="btn-adicionar" class="btn-principal" onclick="adicionarRegistro()">Guardar Dinheiro</button>
        </div>

        <div class="historico" id="lista-registros">
            </div>
    </div>

    <script>
        // JavaScript: O "c√©rebro" do app

        let registros = JSON.parse(localStorage.getItem('cofrinho_registros')) || [];
        let idEditando = null;

        // Fun√ß√£o principal para atualizar a tela
        function atualizarTela() {
            const listaDiv = document.getElementById('lista-registros');
            const totalDisplay = document.getElementById('total-display');
            
            listaDiv.innerHTML = ''; 
            let totalGeral = 0;

            // 1. Organiza os registros do mais novo para o mais velho
            const registrosOrdenados = [...registros].map((reg, index) => ({...reg, originalIndex: index}))
                                        .sort((a, b) => new Date(b.data) - new Date(a.data));

            // 2. Agrupa os registros por M√™s/Ano
            const gruposPorMes = {};

            registrosOrdenados.forEach((registro) => {
                totalGeral += registro.valor; // Soma o total do cofrinho

                const dataObj = new Date(registro.data);
                // Pega o nome do m√™s e o ano (ex: "fevereiro de 2026")
                const mesAno = dataObj.toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' });

                if (!gruposPorMes[mesAno]) {
                    gruposPorMes[mesAno] = { totalMes: 0, itens: [] };
                }

                gruposPorMes[mesAno].itens.push(registro);
                gruposPorMes[mesAno].totalMes += registro.valor;
            });

            // 3. Cria os Cards na tela
            for (const [mesAno, dadosDoMes] of Object.entries(gruposPorMes)) {
                
                // Cria a caixa principal do card
                const cardDiv = document.createElement('div');
                cardDiv.className = 'mes-card';

                // Formata o total daquele m√™s
                const totalMesFormatado = dadosDoMes.totalMes.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

                // Cabe√ßalho do Card (M√™s e Total do M√™s)
                let conteudoCard = `
                    <div class="mes-header">
                        <h3>${mesAno}</h3>
                        <span class="mes-total">+ ${totalMesFormatado}</span>
                    </div>
                `;

                // Adiciona cada registro dentro deste card
                dadosDoMes.itens.forEach(registro => {
                    const dataFormatada = new Date(registro.data).toLocaleDateString('pt-BR');
                    const valorFormatado = registro.valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
                    
                    // Define a cor da tag dependendo de quem foi
                    const pessoa = registro.pessoa || "Davi"; // Preven√ß√£o se houver registro antigo
                    const classeTag = pessoa === 'Davi' ? 'tag-davi' : 'tag-denilma';

                    conteudoCard += `
                        <div class="registro-item">
                            <div>
                                <span class="tag-pessoa ${classeTag}">${pessoa}</span>
                                <span>${dataFormatada} - <strong>${valorFormatado}</strong></span>
                            </div>
                            <div class="botoes-acao">
                                <button onclick="prepararEdicao(${registro.originalIndex})">‚úé</button>
                                <button class="deletar" onclick="deletarRegistro(${registro.originalIndex})">X</button>
                            </div>
                        </div>
                    `;
                });

                cardDiv.innerHTML = conteudoCard;
                listaDiv.appendChild(cardDiv);
            }

            // Atualiza o valor total no porquinho
            totalDisplay.innerText = totalGeral.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

            // Salva os dados
            localStorage.setItem('cofrinho_registros', JSON.stringify(registros));
        }

        // Fun√ß√£o para adicionar ou salvar edi√ß√£o
        function adicionarRegistro() {
            const inputValor = document.getElementById('valor-input');
            const inputPessoa = document.getElementById('pessoa-input');
            
            const valor = parseFloat(inputValor.value);
            const pessoa = inputPessoa.value;

            if (isNaN(valor) || valor <= 0) {
                alert("Por favor, digite um valor v√°lido!");
                return;
            }

            if (idEditando !== null) {
                registros[idEditando].valor = valor;
                registros[idEditando].pessoa = pessoa;
                idEditando = null; 
                document.getElementById('btn-adicionar').innerText = "Guardar Dinheiro";
            } else {
                registros.push({
                    pessoa: pessoa,
                    valor: valor,
                    data: new Date().toISOString()
                });
            }

            inputValor.value = ''; 
            atualizarTela();
        }

        // Fun√ß√£o para preparar a edi√ß√£o
        function prepararEdicao(index) {
            const registro = registros[index];
            
            document.getElementById('valor-input').value = registro.valor; 
            
            // Tenta selecionar a pessoa (se for um registro muito antigo sem pessoa, ignora o erro)
            if(registro.pessoa) {
                document.getElementById('pessoa-input').value = registro.pessoa;
            }

            idEditando = index; 
            document.getElementById('btn-adicionar').innerText = "Salvar Edi√ß√£o"; 
            document.getElementById('valor-input').focus();
        }

        // Fun√ß√£o para deletar
        function deletarRegistro(index) {
            if(confirm("Tem certeza que deseja apagar este registro?")) {
                registros.splice(index, 1); 
                atualizarTela();
            }
        }

        atualizarTela();
    </script>
</body>
</html>
